<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/styles.css" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('./partials/header.html')%> <%-
    include('./partials/navigation.html')%>

    <div>
      <form method="post" style="margin: 2%">
        <label
          >Blood Type:
          <select style="margin-left: 100px" name="bType">
            <option value="1">A+</option>
            <option value="2">A-</option>
            <option value="3">B+</option>
            <option value="4">B-</option>
            <option value="5">O+</option>
            <option value="6">O-</option>
            <option value="7">AB+</option>
            <option value="8">AB-</option>
          </select>
        </label>
        <br />

        <label for="urgent">Urgency Status: </label>
        <select style="margin-left: 78px; margin-top: 2%" name="urgent">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
        </select>
        <br />
        <label
          >Quantity:
          <input
            style="margin-left: 118px; margin-top: 2%; height: 20px"
            type="text"
            name="quantity"
        /></label>
        <br />
        <input
          style="margin-top: 4%; margin-left: 185px"
          type="submit"
          name="enter"
          value="Request"
        />
      </form>
    </div>
    <div
      id="success"
      style="
        width: 40%;
        height: 50px;
        background-color: rgb(4, 240, 4);
        vertical-align: middle;
        display: table-cell;
        text-align: center;
        border-radius: 5px;
      "
    >
      Successfully request sent
    </div>
    <script>
      $(document).ready(function () {
        let showing = "<%= showing %>";
        if (showing != "success") {
          $("#success").hide();
        }

        let h = "/requestBlood/" + "<%= hid %>";
        $("form").attr("action", h);

        if (showing === "empty") {
          alert("Quantity not set");
          $("#success").hide();
        } else if (showing === "success") {
          $("#success").animate({ opacity: "0.4" }, "slow");
          $("#success").animate({ opacity: "0.8" }, "slow");
        }
      });
    </script>
  </body>
</html>
